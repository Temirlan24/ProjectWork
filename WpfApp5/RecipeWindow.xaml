<Window x:Class="WpfApp5.RecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="RecipeWindow" Height="610" Width="321">
    <Grid>
        <Image x:Name="Picture" HorizontalAlignment="Left" Height="158" Margin="10,10,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBlock HorizontalAlignment="Left" Margin="160,10,0,0" Text="Название блюда:" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBlock x:Name="FoodNameTB" HorizontalAlignment="Left" Margin="160,31,0,0" Text="нб" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBlock HorizontalAlignment="Left" Margin="161,52,0,0" Text="Среднее время готовки:" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <TextBlock x:Name="AVGTB" HorizontalAlignment="Left" Margin="160,73,0,0" Text="свг" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <TextBlock HorizontalAlignment="Left" Margin="160,94,0,0" Text="Тип блюда:" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBlock x:Name="TypeOfFoodTB" HorizontalAlignment="Left" Margin="161,110,0,0" Text="тб" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBlock HorizontalAlignment="Left" Margin="161,131,0,0" Text="Тип кухни:" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <TextBlock x:Name="TypeOfKitchenTB" HorizontalAlignment="Left" Margin="162,147,0,0" Text="тк" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <ListBox x:Name="CompositionOfTheDishLB" Margin="10,201,10,264" Foreground="White" Background="Black"/>
        <ListBox x:Name="StepByStepCookingLB" Margin="10,361,10,30" Foreground="White" Background="Black"/>
        <Label Content="Состав блюда:" HorizontalAlignment="Left" Margin="7,175,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,1.003"/>
        <Label Content="Пошаговое приготовление:" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,1.003"/>
        <Button x:Name="EditBtn"  Content="Редактировать" HorizontalAlignment="Left" Margin="10,569,0,0" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="ExportBtn"  Content="Экспортировать" HorizontalAlignment="Left" Margin="168,569,0,0" VerticalAlignment="Top" Width="145"/>

    </Grid>
</Window>
